<Window x:Class="GraphManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GraphManager.ViewModels"
        xmlns:local="clr-namespace:GraphManager"
        xmlns:conv="clr-namespace:GraphManager.Converters"
        xmlns:enums="clr-namespace:GraphManager.Enums"
        mc:Ignorable="d"
        Title="Graph Manager    v 0.3 (Beta)" Height="650" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:BlockCenterConverter x:Key="CenterConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Background" Value="LightGray"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="Z" Command="{Binding UndoCmd}" />
        <KeyBinding Modifiers="Control" Key="Y" Command="{Binding RedoCmd}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Menu Background="{x:Null}">
                <MenuItem MouseEnter="MenuItem_MouseEnter" MouseLeave="MenuItem_MouseLeave" Header="Файл" Height="19" Padding="5,1,5,2" BorderThickness="0" Background="{x:Null}">
                    <MenuItem Header="Сохранить" Command="{Binding SaveCmd}"/>
                    <MenuItem Header="Открыть" Command="{Binding LoadCmd}"/>
                </MenuItem>
                <MenuItem Header="Вид" Height="19" Padding="5,1,5,1" BorderThickness="0" Background="{x:Null}"/>
                <MenuItem Header="Настройки" Height="19" Padding="5,1,5,1" BorderThickness="0" Background="{x:Null}"/>
            </Menu>
        </StackPanel>

        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">

            <Grid Width="5000" Height="5000" Background="White"
                  MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown"
                  MouseLeftButtonUp="CanvasArea_MouseLeftButtonUp"
                  MouseMove="CanvasArea_MouseMove">

                <ItemsControl ItemsSource="{Binding CurrentProject.Links}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line Stroke="Gray" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Line.X1>
                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                        <Binding Path="SourceBlock.X" />
                                        <Binding Path="SourceBlock.Width" />
                                    </MultiBinding>
                                </Line.X1>

                                <Line.Y1>
                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                        <Binding Path="SourceBlock.Y" />
                                        <Binding Path="SourceBlock.Height" />
                                    </MultiBinding>
                                </Line.Y1>

                                <Line.X2>
                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                        <Binding Path="TargetBlock.X" />
                                        <Binding Path="TargetBlock.Width" />
                                    </MultiBinding>
                                </Line.X2>

                                <Line.Y2>
                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                        <Binding Path="TargetBlock.Y" />
                                        <Binding Path="TargetBlock.Height" />
                                    </MultiBinding>
                                </Line.Y2>
                            </Line>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding CurrentProject.Blocks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X, Mode=TwoWay}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y, Mode=TwoWay}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightBlue" BorderBrush="Navy" BorderThickness="2" 
                                    CornerRadius="5" Width="{Binding Width}" Height="{Binding Height}" Padding="5"
                                    MouseLeftButtonDown="Block_MouseLeftButtonDown">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Details}" FontSize="10" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <StackPanel x:Name="ActionPanel" Grid.Row="1" 
                    Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Width="46" Margin="10,0,0,0">

            <Button Content="+" ToolTip="Создать" Width="42" Height="42" Margin="0,2,0,0" Command="{Binding SetCreateCmd}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ToolButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="{x:Static enums:ToolMode.Create}">
                                <Setter Property="Background" Value="LightGreen"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="-" ToolTip="Удалить" Width="42" Height="42" Margin="0,2,0,0" Command="{Binding SetDeleteCmd}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ToolButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="{x:Static enums:ToolMode.Delete}">
                                <Setter Property="Background" Value="Salmon"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="L" ToolTip="Связь" Width="42" Height="42" Margin="0,2,0,0" Command="{Binding SetLinkCmd}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ToolButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="{x:Static enums:ToolMode.Link}">
                                <Setter Property="Background" Value="Gold"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="H" ToolTip="Рука" Width="42" Height="42" Margin="0,2,0,0" Command="{Binding SetSelectCmd}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ToolButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="{x:Static enums:ToolMode.Select}">
                                <Setter Property="Background" Value="LightSkyBlue"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="↩" ToolTip="Отменить (Undo)" Width="42" Height="42" Margin="0,2,0,0" 
                Command="{Binding UndoCmd}"/>
            <Button Content="↪" ToolTip="Повторить (Redo)" Width="42" Height="42" Margin="0,2,0,0" 
                Command="{Binding RedoCmd}"/>
        </StackPanel>
        <Border HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Grid.Row="0"          
            Grid.RowSpan="2"       Margin="20"
            Padding="15"
            Background="#333333"
            CornerRadius="8"
            MaxWidth="300"
            Panel.ZIndex="9999">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentNotification.IsVisible}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding CurrentNotification.Message}" 
                       Foreground="White" 
                       TextWrapping="Wrap"
                       FontSize="14"
                       Grid.Column="0"/>

                <Button Content="✕" 
                    Command="{Binding CloseNotificationCommand}"
                    Grid.Column="1"
                    Foreground="LightGray"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="10,-5,-5,0"
                    FontWeight="Bold"
                    Cursor="Hand"/>
            </Grid>

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>